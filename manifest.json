{
  "manifest_version": 3,
  "name": "GPT Notification/Quiz - STRI",
  "version": "1.01",
  "options_page": "Options/options.html",
  "description": "Envoyez du texte sélectionné à ChatGPT et recevez une réponse dans une notification.",
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js" 
  }
}
