{
  "manifest_version": 3,
  "name": "GPT Notification/Quiz - STRI",
  "version": "1.02",
  "options_page": "Options/options.html",
  "description": "Envoyez du texte sélectionné à ChatGPT et recevez une réponse dans une notification.",
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "commands"
  ],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "send_to_chatgpt": {
      "suggested_key": {
        "mac": "Command+Shift+1",
        "default": "Ctrl+I"
      },
      "description": "Envoyer la sélection à ChatGPT"
    }
  }
}
